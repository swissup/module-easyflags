<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="easyflags" translate="label" type="text" sortOrder="523" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>EasyFlags</label>
            <tab>swissup</tab>
            <resource>Swissup_Easyflags::config_easyflags</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="lang_switcher" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Language Switcher</label>
                <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Language switcher mode</label>
                    <source_model>Swissup\Easyflags\Model\Config\Source\Mode</source_model>
                </field>
            </group>
        </section>
    </system>
</config>

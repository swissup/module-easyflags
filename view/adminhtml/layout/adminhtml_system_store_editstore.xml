<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block class="Swissup\Easyflags\Block\Fieldset\HtmlContent" name="swissupEasyflagsFieldset">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="swissup_easyflags_fieldset" xsi:type="array">
                            <item name="component" xsi:type="string">uiComponent</item>
                            <item name="children" xsi:type="array">
                                <item name="easyflags_image" xsi:type="array">
                                    <item name="type" xsi:type="string">media</item>
                                    <item name="name" xsi:type="string">easyflags_image</item>
                                    <item name="dataScope" xsi:type="string">easyflags_image</item>
                                    <item name="config" xsi:type="array">
                                        <item name="component" xsi:type="helper" helper="Swissup\Easyflags\Helper\Ui\ImageUploader::getComponent" />
                                        <item name="template" xsi:type="string">Swissup_Easyflags/form/element/uploader/old-php-form-workaround</item>
                                        <item name="dataType" xsi:type="string">string</item>
                                        <item name="label" xsi:type="string" translate="true">Image</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="formElement" xsi:type="helper" helper="Swissup\Easyflags\Helper\Ui\ImageUploader::getFormElement" />
                                        <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                                        <item name="required" xsi:type="boolean">false</item>
                                        <item name="sortOrder" xsi:type="number">10</item>
                                        <item name="uploaderConfig" xsi:type="array">
                                            <item name="url" xsi:type="url" path="swissup-easyflags/image/upload"/>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </body>
</page>
